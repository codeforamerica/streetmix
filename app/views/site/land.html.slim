- content_for :head do
  javascript:
    var ENV = '#{Rails.env}';
    var SITE_URL = '//#{Figaro.env.api_host}/';
    var API_URL = '#{Figaro.env.api_path}';
    var FACEBOOK_APP_ID = '#{Figaro.env.facebook_app_id}';
    var URL_SIGN_IN_CALLBACK_REL = '#{Figaro.env.twitter_oauth_callback_uri}';
    var NO_INTERNET_MODE = #{Figaro.env.no_internet_mode};

  = stylesheet_link_tag "application"
  - if Figaro.env.no_internet_mode
    = stylesheet_link_tag "no-internet"
  = javascript_include_tag "application"

  script src='//platform.twitter.com/widgets.js'

  javascript:
    Stmx.app.preInit();

#flash

#debug
  textarea

#loading
  div
    span data-i18n='msg.loading'
    progress id='loading-progress'

= render 'ui/gallery'

#main-screen

  = render 'ui/menu_bar'
  = render 'ui/menus'

  .info-bubble

  #error
    div
      h1#error-title
      div#error-description.description
    .rear-clouds
    .front-clouds

  #blocking-shield
    div
      .message
      .try-again
        | Streetmix is having trouble connecting to the Internet.
        | <br>
        button#blocking-shield-try-again.
          Try again
        button#blocking-shield-cancel.
          Cancel
      .too-slow
        | Streetmix wasnâ€™t able to connect to the Internet in awhile now.
        | <br>
        | <br>
        | You might want to reload the page and try again. Please note you
        | might lose the latest change to the street. Sorry!
        | <br>
        | <br>
        button#blocking-shield-reload.
          Reload

  #status-message
    div

  #no-connection-message
    div
      | Streetmix is having trouble connecting to the Internet.
      button#no-connection-try-again.
        Try again

  #street-name-canvas
    #street-name.street-name
      div
    #street-metadata
      span#street-metadata-width
        span#street-width-read
          span#street-width-read-width
          | &nbsp;
          span#street-width-read-difference
        select#street-width
      span#street-metadata-author
      span#street-metadata-date

  = render 'ui/dialogs'
  = render 'ui/welcome'

  section#street-section-outer
    #gallery-shield

    section#street-section-inner
      section#street-section-canvas
        section#street-section-left-building
          .hover-bk
        section#street-section-right-building
          .hover-bk
        #street-section-editable
        .segment.empty#street-section-left-empty-space
        .segment.empty#street-section-right-empty-space
        section#street-section-dirt

  section#street-section-sky
    .rear-clouds
    .front-clouds
  #street-scroll-indicator-left
  #street-scroll-indicator-right

  footer
    .footer-canvas
      .width-chart-canvas
        canvas#width-chart
      .regular-canvas
        #commands
          button#undo data-i18n='btn.undo'
          button#redo data-i18n='btn.redo'
        #palette
          .palette-canvas
        #trashcan data-i18n='palette.remove'

#print
  div

javascript:
  Stmx.app.init();
