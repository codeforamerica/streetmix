#save-as-image-dialog.dialog-box
  div
    button.close ×

    h1 data-i18n='dialogs.save.heading'
      Save as image

    p
      input#save-as-image-segment-names type='checkbox')
      label for='save-as-image-segment-names' data-i18n='dialogs.save.option-label'
        Segment names and widths
      input#save-as-image-street-name type='checkbox')
      label for='save-as-image-street-name' data-i18n='dialogs.save.option-name'
        Street name
      input#save-as-image-transparent-sky type='checkbox')
      label for='save-as-image-transparent-sky' data-i18n='dialogs.save.option-sky'
        Transparent sky

    #save-as-image-preview
      #save-as-image-preview-loading data-i18n='dialogs.save.loading'
        Loading…
      #save-as-image-preview-preview

    p
      span.non-touch-only
        span data-i18n='dialogs.save.instructions-mouse'
          Drag the image anywhere you want, or
        a#save-as-image-download.button-like download, data-i18n='dialogs.save.save-button'
          Save to your computer…
      span.touch-only data-i18n='dialogs.save.instructions-touch'
        Hold your finger on the image above to save or copy it.

